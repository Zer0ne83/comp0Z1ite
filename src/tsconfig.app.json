{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "",
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports":true,
    "esModuleInterop":true,
    "module": "ES6",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "ES6",
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.d.ts",
    "**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
